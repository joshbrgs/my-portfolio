---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import LottieAnimation from "astro-integration-lottie/Lottie.astro";
---

<Layout title="About">
  <Container>
    <main
      class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
      <div class="py-6 h-20 w-20 md:order-1 hidden md:block">
        <LottieAnimation src="assets/eyboard.json" autoplay="visible" />
      </div>
      <div>
        <span
          class="outlined-text text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter"
          >A Little About</span
        >
        <h1
          class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
          ME
        </h1>
      </div>
    </main>
  </Container>
</Layout>

<style>
  span.outlined-text {
    /*-webkit-text-stroke: 1px black;*/
    color: white;
    text-shadow:
      3px 3px 0 #000,
      -1px -1px 0 #000,
      1px -1px 0 #000,
      -1px 1px 0 #000,
      1px 1px 0 #000;
  }
</style>

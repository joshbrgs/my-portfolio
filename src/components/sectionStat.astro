---
const { stat, label } = Astro.props;
---

<div>
  <span
    class="outlined-text text-3xl lg:text-4xl xl:text-5xl font-bold lg:tracking-tight xl:tracking-tighter">
    {stat}
  </span>
  <p
    class="text-xl lg:text-2xl xl:text-3xl font-bold lg:tracking-tight xl:tracking-tighter">
    {label}
  </p>
</div>

<style>
  span.outlined-text {
    /*-webkit-text-stroke: 1px black;*/
    color: white;
    text-shadow:
      3px 3px 0 #000,
      -1px -1px 0 #000,
      1px -1px 0 #000,
      -1px 1px 0 #000,
      1px 1px 0 #000;
  }
</style>
